<Controls:MetroWindow
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             x:Class="Motorcycle.Views.ConfirmationValueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Title="Add/change value" Height="150" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"  Grid.Row="0"  Text="Модель" Margin="10, 0, 0, 0"/>
        <TextBlock Grid.Column="1"  Grid.Row="0" Text="Motosale" Margin="10, 0, 0, 0"/>

        <TextBox Grid.Column="0"  Grid.Row="1" Name="Nam" Height="30" MinWidth="150" Margin="10"/>
        <TextBox Grid.Column="1"  Grid.Row="1" Name="Val" Height="30" MinWidth="150" Margin="10"/>

        <Button Grid.Column="0"  Grid.Row="2" x:Name="Save" Content="Save" Height="30" Margin="10"/>
        <Button Grid.Column="1"  Grid.Row="2" x:Name="Cancel" Content="Отменить" Height="30" Margin="10"/>
    </Grid>

</Controls:MetroWindow>
